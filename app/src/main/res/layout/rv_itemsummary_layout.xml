<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="123dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_paternoster_white"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:layout_marginVertical="16dp">

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="34sp"
        android:textColor="@color/himawari_yellow"
        android:text="@string/tvDummy_SummaryCount"/>

    <TextView
        android:id="@+id/tvSummaryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="124dp"
        app:layout_constraintStart_toStartOf="@+id/tvCount"
        app:layout_constraintTop_toBottomOf="@+id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="2dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/stormy_mauve"
        android:text="@string/tvDummy_SummaryName"/>

</androidx.constraintlayout.widget.ConstraintLayout>